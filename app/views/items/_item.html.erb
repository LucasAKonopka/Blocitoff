<% @user.items.each do |i| %>
	<%= content_tag :div, class: 'media', id: "item-#{i.id}"  do%> 
		<%= i.name %> |  <%= link_to "", [@user, i], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
		| <small>Days Since Creation:  <%= distance_of_time_in_words(i.created_at, Time.now) %></small>	
	<% end %>
<% end %>
